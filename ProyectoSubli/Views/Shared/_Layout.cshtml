<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoSubli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoSubli.styles.css" asp-append-version="true" />

    <script>
        const storedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-bs-theme', storedTheme);
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProyectoSubli</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-area="" asp-controller="Ploteo" asp-action="Index">Área Ploteo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold text-danger" asp-area="" asp-controller="Sublimacion" asp-action="Index">Área Sublimación</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item ms-auto">
                            <button id="btnToggleTheme" class="btn btn-sm btn-outline-secondary mt-1 ms-3">
                                🌙 Modo Oscuro
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ProyectoSubli - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const btnToggle = document.getElementById("btnToggleTheme");
            const htmlElement = document.documentElement;

            function updateButton(theme) {
                if (theme === 'dark') {
                    btnToggle.innerHTML = "☀️ Modo Claro";
                    btnToggle.classList.replace("btn-outline-secondary", "btn-outline-light");
                } else {
                    btnToggle.innerHTML = "🌙 Modo Oscuro";
                    btnToggle.classList.replace("btn-outline-light", "btn-outline-secondary");
                }
            }

            const currentTheme = htmlElement.getAttribute("data-bs-theme");
            updateButton(currentTheme);

            btnToggle.addEventListener("click", function () {
                const newTheme = htmlElement.getAttribute("data-bs-theme") === "dark" ? "light" : "dark";
                htmlElement.setAttribute("data-bs-theme", newTheme);
                localStorage.setItem("theme", newTheme);
                updateButton(newTheme);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>